[github]
    #replace with your GitHub username.
    user = "<username>"
[alias]
    hub-new-public-repo = "!REPO=$(basename $PWD) GHUSER=$(git config --get github.user); curl -H 'Authorization: <token your-github-token>' https://api.github.com/user/repos -d {\\\"name\\\":\\\"$REPO\\\"}; git remote add origin git@github.com:$GHUSER/$REPO.git; git push origin master"
		hub-new-private-repo = "!REPO=$(basename $PWD) GHUSER=$(git config --get github.user); curl -H 'Authorization: <token your-github-token>' https://api.github.com/user/repos -d {\\\"name\\\":\\\"$REPO\\\"\\,\\\"private\\\":\\\"true\\\"}; git remote add origin git@github.com:$GHUSER/$REPO.git; git push origin master"
